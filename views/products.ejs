<h1>Products</h1>
<ul>
  <% products.forEach(p => { %>
    <li><%= p.name %> - $<%= p.price %>
      <form method="POST" action="/cart/add">
        <input type="hidden" name="productId" value="<%= p._id %>">
        <button>Add to Cart</button>
      </form>
    </li>
  <% }) %>
</ul>
<a href="/checkout">Checkout</a>

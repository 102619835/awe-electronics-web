<%- include('partials/header', { title: 'Order Status' }) %>
<h2 class="mb-4">Order Status</h2>
<div class="row">
  <% orders.forEach(order => { %>
    <div class="col-md-6">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/orders/<%= order._id %>">Order <%= order._id %></a>
          </h5>
          <p class="card-text">
            <strong>Status:</strong> <%= order.status %><br>
            <% if (order.user) { %>
              <strong>Customer:</strong> <%= order.user %>
            <% } %>
          </p>
        </div>
      </div>
    </div>
  <% }) %>
</div>
<a href="/products" class="btn btn-link">Back to Products</a>
<%- include('partials/footer') %>